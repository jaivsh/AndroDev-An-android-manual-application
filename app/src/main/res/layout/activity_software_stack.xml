<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".software_stack">
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Android Software Stack-"
        android:textColor="#ec0215"
        android:textStyle="bold|normal|italic" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textColor="#000000"
        android:text="In android, the Operating system is Linux Kernel. The Kernel Version can be found in any Android device by going 'Settings' then 'About phone' option from the opened list." />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/software_stack"
        android:layout_marginTop="97dp"
        android:scaleType="fitXY"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="480dp"
        android:textColor="#e70a0a"
        android:textSize="15dp"
        android:textStyle="bold"
        android:text="Properties of Linux Kernel are-" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:text="Activity Manager- Controls all the aspects of application lifecycle and activity stack."/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_marginTop="540dp"
        android:layout_marginLeft="10dp"
        android:text="Content Provider- Allows applications to publish and share data with other applications"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="570dp"
        android:text="View System- An extensible set of views used to create application user interface"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="600dp"
        android:text="Notifications manager- allows applications to give notifications to the user."/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="650dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/android_parts"
        android:scaleType="fitXY"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="915dp"
            android:layout_marginLeft="110dp"
            android:text="Parts of Android Operating System"/>
    </RelativeLayout>

</ScrollView>
</android.support.constraint.ConstraintLayout>