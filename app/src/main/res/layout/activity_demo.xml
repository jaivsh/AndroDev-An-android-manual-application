<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".demo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Demos"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000000"/>

       <RelativeLayout  android:id="@+id/demo1"
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:orientation="horizontal"
           android:background="#005eff">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_centerInParent="true"
               android:gravity="center"
               android:textSize="20sp"
               android:layout_marginTop="10dp"
               android:textStyle="bold"
               android:text="Splash Activity"
               android:textColor="#ffffff"/>
           <ImageButton android:id="@+id/splashrun"
               android:layout_width="50dp"
               android:layout_height="match_parent"
               android:onClick="opensplashrun"
               android:layout_alignParentEnd="true"
               android:src="@drawable/run"
               android:background="#00000000"
               android:layout_alignParentRight="true" />
           <ImageButton android:id="@+id/splashcode"
               android:layout_width="50dp"
               android:layout_height="match_parent"
               android:onClick="opensplashcode"
               android:layout_alignParentStart="true"
               android:src="@drawable/code"
               android:background="#00000000"
               android:layout_alignParentLeft="true" />
       </RelativeLayout>

        <RelativeLayout  android:id="@+id/demo2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:background="#005eff">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:text="WebView"
                android:textColor="#ffffff"/>
            <ImageButton android:id="@+id/webviewrun"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:onClick="openwebview"
                android:src="@drawable/run"
                android:background="#00000000"
                android:layout_alignParentRight="true" />
            <ImageButton android:id="@+id/webviewcode"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:src="@drawable/code"
                android:onClick="openwebcode"
                android:background="#00000000"
                android:layout_alignParentLeft="true" />
        </RelativeLayout>

        <RelativeLayout android:id="@+id/demo3"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="#005eff">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:text="Snack Bar"
                android:textColor="#ffffff"/>
            <ImageButton android:id="@+id/snackrun"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:src="@drawable/run"
                android:onClick="snackbarun"
                android:background="#00000000"
                android:layout_alignParentRight="true" />
            <ImageButton android:id="@+id/snackcode"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:onClick="opensnackbarcode"
                android:src="@drawable/code"
                android:background="#00000000"
                android:layout_alignParentLeft="true" />
        </RelativeLayout>

        <RelativeLayout android:id="@+id/demo4"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="#005eff">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:text="Simple Toast"
                android:textColor="#ffffff"/>
            <ImageButton android:id="@+id/toastrun"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:onClick="opentoastrun"
                android:src="@drawable/run"
                android:background="#00000000"
                android:layout_alignParentRight="true" />
            <ImageButton android:id="@+id/toastcode"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:onClick="opentoastcode"
                android:src="@drawable/code"
                android:background="#00000000"
                android:layout_alignParentLeft="true" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="More Demos Coming Soon"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:layout_gravity="center"/>
        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            ads:adSize="SMART_BANNER"
            ads:adUnitId="ca-app-pub-5404724432369100/9548091967">
        </com.google.android.gms.ads.AdView>
    </LinearLayout>

</ScrollView>