<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="2dp"
        android:background="#fbffffff">





        <TextView   android:id="@+id/promotional"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff4c46"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:fontFamily="sans-serif-smallcaps"
            android:textSize="25sp"
            android:text="Home"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/b2"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#ffffff"
            android:focusable="false"
            android:text="About This Guide"
            android:textColor="#000000"
            android:textStyle="bold" />



        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/b3"
            card_view:cardCornerRadius="10dp"
            android:layout_toEndOf="@+id/divider2"
            android:layout_gravity="center"
            android:layout_below="@+id/divider"
            android:elevation="3dp"
            android:layout_width="100dp"
            android:layout_margin="7dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@+id/divider2">
            <TextView
                android:id="@+id/b3text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Beginner's Level"
                android:textSize="16sp"
                android:textAlignment="center"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:background="#0090ff"
                android:textColor="#ffffff"
                android:textStyle="bold"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/b4"
            android:layout_toStartOf="@+id/divider3"
            android:layout_gravity="center"
            android:layout_below="@+id/divider"
            android:shape="ring"
            android:elevation="3dp"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_margin="7dp"
            card_view:cardCornerRadius="10dp"
            android:layout_toLeftOf="@+id/divider3">
            <TextView
                android:id="@+id/b4text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Core Level"
                android:textSize="16sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textStyle="bold"
                android:fontFamily="sans-serif-smallcaps"
                android:background="#0090ff"
                android:textColor="#ffffff"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/b5"
            android:layout_toEndOf="@+id/divider2"
            android:layout_gravity="center"
            android:layout_below="@+id/b3"
            android:layout_margin="7dp"
            android:layout_width="100dp"
            android:elevation="3dp"
            android:layout_height="80dp"
            card_view:cardCornerRadius="10dp"
            android:layout_toRightOf="@+id/divider2">
            <TextView
                android:id="@+id/b5text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Advanced Level"
                android:textSize="16sp"
                android:fontFamily="sans-serif-smallcaps"
                android:textAlignment="center"
                android:gravity="center"
                android:textStyle="bold"
                android:background="#0090ff"
                android:textColor="#ffffff"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/b6"
            android:layout_toStartOf="@+id/divider3"
            android:layout_margin="7dp"
            android:layout_gravity="center"
            android:layout_below="@+id/b4"
            android:shape="ring"
            android:elevation="3dp"
            android:layout_width="100dp"
            android:layout_height="80dp"
            card_view:cardCornerRadius="10dp"
            android:layout_toLeftOf="@+id/divider3">
            <TextView
                android:id="@+id/b6text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Some Useful Tips"
                android:textSize="16sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textStyle="bold"
                android:background="#0090ff"
                android:fontFamily="sans-serif-smallcaps"
                android:textColor="#ffffff"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/b7"
            android:layout_margin="7dp"
            android:layout_gravity="center"
            android:layout_below="@+id/b6"
            android:shape="ring"
            android:layout_width="100dp"
            android:layout_centerHorizontal="true"
            android:elevation="3dp"
            android:layout_height="80dp"
            card_view:cardCornerRadius="10dp">
            <TextView
                android:id="@+id/b7text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Android Demos"
                android:fontFamily="sans-serif-smallcaps"
                android:textSize="16sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textStyle="bold"
                android:background="#0090ff"
                android:textColor="#ffffff"/>
        </android.support.v7.widget.CardView>


        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:elevation="4dp"
            android:fadingEdgeLength="120dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/promotional"
            android:background="#210d54" />

        <View
            android:id="@+id/divider2"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:elevation="5dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="29dp"
            android:layout_marginStart="29dp"
            android:background="#0040ff" />

        <View
            android:id="@+id/divider3"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:elevation="5dp"
            android:background="#0040ff" />

        <View
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:elevation="7dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="26sp"
            android:background="#231254" />

        <ImageView
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/button3"
            android:layout_margin="10dp"
            android:src="@mipmap/ic_launcher"/>


        <Button
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/button3"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="43dp"
            android:background="#ffffff"
            android:onClick="rateapp"
            android:text="Rate Us"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#514f4f"
            android:textSize="15sp"
            android:textStyle="bold" />



    </RelativeLayout>
</android.support.constraint.ConstraintLayout>

